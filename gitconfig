[init]
  templatedir = ~/.git_template
[user]
  name = Matt Critchlow
  email = matt@critchlow.xyz
  signingkey = 5B86D84AB60CAB15
[includeIf "gitdir:~/projects/ucsd/"]
  path = ~/.gitconfig.work
[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes

  c  = commit
  ca = commit --amend
  cm = commit -m
  cma = commit -a -m
  ci = commit -v

  fuckit = reset --hard

  r = reset
  r1 = reset HEAD^
  r2 = reset HEAD^^
  rh = reset --hard
  rh1 = reset HEAD^ --hard
  rh2 = reset HEAD^^ --hard

  st = status
  sh = show
  d = diff
  co = checkout

  ph = push
  pht = push --tags
  phom = push origin master
  phomf = push origin master --force-with-lease
  phomt = push origin master --tags
  phum = push upstream master
  phumt = push upstream master --tags

  pl = pull
  plt = pull --tags
  plom = pull origin master
  plomr = pull origin master --rebase
  plomt = pull origin master --tags
  plum = pull upstream master
  plumt = pull upstream master --tags

  lg = log --graph --decorate --oneline
[core]
  excludesfile = ~/.gitignore
  editor = vim
  autocrlf = input
[commit]
  template = ~/.gitmessage
  gpgsign = true
	verbose = true
[fetch]
  prune = true
[rebase]
  autosquash = true
[help]
  autocorrect = 1
[diff "ansible-vault"]
	textconv = ansible-vault view
