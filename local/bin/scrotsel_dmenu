#!/bin/sh
# TODO: eventually remove xorg version
if [ "${WAYLAND_DISPLAY}" ]; then
  grimshot="/usr/share/sway/scripts/grimshot --notify"
  case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfullscreen (copy)" | bemenu -l 6 -i -p "Screenshot which area?")" in
    "a selected area") "$grimshot save area" ;;
    "current window") "$grimshot save active" ;;
    "full screen") "$grimshot save screen" ;;
    "a selected area (copy)") "$grimshot copy area" ;;
    "current window (copy)") "$grimshot copy active" ;;
    "full screen (copy)") "$grimshot save screen" ;;
  esac
else
  case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfullscreen (copy)" | dmenu -l 6 -i -p "Screenshot which area?")" in
    "a selected area") maim -s ~/Pictures/pic-selected-"$(date '+%y%m%d-%H%M-%S').png" ;;
    "current window") maim -i "$(xdotool getactivewindow)" ~/Pictures/pic-window-"$(date '+%y%m%d-%H%M-%S').png" ;;
    "full screen") maim ~/Pictures/pic-full-"$(date '+%y%m%d-%H%M-%S').png" ;;
    "a selected area (copy)") maim -s | xclip -selection clipboard -t image/png ;;
    "current window (copy)") maim -i | xclip -selection clipboard -t image/png ;;
    "full screen (copy)") maim | xclip -selection clipboard -t image/png ;;
  esac
fi
