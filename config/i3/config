# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
        position bottom
        font pango:Noto Sans, FontAwesome 12


        colors {
            background $bg

            focused_workspace $cyan $cyan #fafafa
            active_workspace $yellow $yellow #fafafa
            inactive_workspace $bg $bg #fafafa
            urgent_workspace $red $red #fafafa
        }
}

# class                 border  backgr. text indicator child_border
client.focused          $blue     $fg     $bg  $bg       $blue
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $yellow     $bg1    $fg  $bg       $yellow
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg

########## i3-gaps integration ##########

for_window [class="^.*"] border pixel 3
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable

# smart_gaps on
set $gap_inner 5
set $gap_outer 5
gaps inner $gap_inner
gaps outer $gap_outer

# toggle gaps
bindsym $mod+g gaps inner current set $gap_inner; gaps outer current set $gap_outer
bindsym $mod+Shift+g gaps inner current set 0; gaps outer current set 0
# adjust gaps
bindsym $mod+s gaps inner current plus 5; gaps outer current plus 5
bindsym $mod+Shift+s gaps inner current minus 5; gaps outer current minus 5
smart_borders on

