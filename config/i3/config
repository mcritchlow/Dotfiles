########## Scratchpad Windows ##########
# Simple 'calculator' using R for arithmetic
# bound to mod+a (a == arithmetic)
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 900 400
# TODO: change to percentage once next i3 version ships
# for_window [instance="math"] resize set 30 ppt 30 ppt
for_window [instance="math"] move scratchpad
exec --no-startup-id $term -n math -f mono:size=24 -e R -q


# Dropdown tmux window for background scripts.
# Primary use case is package updates.
# bound to mod+u (u == updates)
for_window [instance="dropdown"] floating enable
# TODO: change to percentage once next i3 version ships
# for_window [instance="math"] resize set 30 ppt 30 ppt
for_window [instance="dropdown"] resize set 900 500
for_window [instance="dropdown"] move scratchpad
exec --no-startup-id $term -n dropdown -e bash -i -c "tmux new-session -s dropdown"

########## Keybindings ##########

## Manual management of external displays
# from https://wiki.archlinux.org/index.php/I3#External_displays_manual_management
# Set the shortcuts and what they do
set $mode_display Ext Screen (v) VGA ON, (h) HDMI ON, (x) VGA OFF, (y) HDMI OFF
mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output VGA-1 --auto --right-of LVDS-1, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI-1 --auto --right-of LVDS-1, mode "default"
    bindsym x exec --no-startup-id xrandr --output VGA-1 --auto --off, mode "default"
    bindsym y exec --no-startup-id xrandr --output HDMI-1 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"
bindsym $mod+Shift+x move container to output right
# bindsym $mod+Shift+y move container to output left


set $Locker $HOME/.config/i3/scripts/lock.sh && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+Delete mode "$mode_system"

### Backlight (is failing on Thinkpad) ###
