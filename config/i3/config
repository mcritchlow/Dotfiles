########## Scratchpad Windows ##########
# Simple 'calculator' using R for arithmetic
# bound to mod+a (a == arithmetic)
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 800 300
# TODO: change to percentage once next i3 version ships
# for_window [instance="math"] resize set 30 ppt 30 ppt
for_window [instance="math"] move position center
for_window [instance="math"] move scratchpad
exec --no-startup-id $term -fn "xft:mono:pixelsize=24" -name math -e R -q

# Dropdown tmux window for background scripts.
# Primary use case is package updates.
# bound to mod+u (u == updates)
for_window [instance="dropdown"] floating enable
# TODO: change to percentage once next i3 version ships
# for_window [instance="math"] resize set 30 ppt 30 ppt
for_window [instance="dropdown"] resize set 800 400
for_window [instance="dropdown"] move position center
for_window [instance="dropdown"] move scratchpad
exec --no-startup-id $term -name dropdown -e bash -i -c "tmux new-session -s dropdown"

########## Keybindings ##########
set $Locker $HOME/.config/i3/scripts/lock.sh && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "$mode_system"

### Backlight (is failing on Thinkpad) ###
bindsym XF86MonBrightnessUp exec --no-startup-id ~/bin/brightlight -p -i 10
bindsym XF86MonBrightnessDown exec --no-startup-id ~/bin/brightlight -p -d 10

### Media Player ###
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

### Other ###
# Full screenshot
bindsym Print exec scrot -q 100 -e 'mv $f ~/Pictures/'
# Selete window/area
bindsym Shift+Print exec scrot -s -q 100 -e 'mv $f ~/Pictures/'

### Sound ###
# Raise Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
# Lower Volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle-mute # Toggle muting

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id $term
# start ranger
bindsym $mod+Shift+f exec --no-startup-id $term -e ranger
# start calcurse
bindsym $mod+c exec --no-startup-id $term -name calcurse -e bash -i -c "calcurse -D $HOME/.config/calcurse/"
# start w3m browser
bindsym $mod+b exec --no-startup-id $term -name w3m -e bash -i -c "w3m https://duckduckgo.com"
# start mutt
bindsym $mod+Shift+m exec --no-startup-id $term -name mutt -e bash -i -c ~/.config/i3/scripts/mail.sh

# kill focused window
bindsym $mod+Shift+q kill

