# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
        position bottom
        font pango:Noto Sans, FontAwesome 12


        colors {
            background $bg

            focused_workspace $cyan $cyan #fafafa
            active_workspace $yellow $yellow #fafafa
            inactive_workspace $bg $bg #fafafa
            urgent_workspace $red $red #fafafa
        }
}


