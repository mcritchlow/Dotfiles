auto-reload yes
notify-program "/usr/bin/notify-send"

external-url-viewer "BROWSER=linkhandler urlscan"


download-path "~/Podcasts/"

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
bind-key T toggle-show-read-feeds

color listnormal color7 default
color listfocus black color7 standout
color listnormal_unread color15 default
color listfocus_unread black color15 standout
color info color15 black
color article white default

browser linkhandler
macro , open-in-browser
macro w set browser "w3m"; open-in-browser ; set browser linkhandler
macro v set browser "mpv --ytdl-format='bestvideo[height<=720]+bestaudio/best[height<=720]'"; open-in-browser ; set browser linkhandler
macro p set browser "dmenu_link_handler"; open-in-browser ; set browser linkhandler
# c copies the link to the clipboard.
# The line below is probably the skiddiest line I've ever written.
macro c set browser "copy(){ echo $1 | xclip ;}; copy "; open-in-browser ; set browser linkhandler
